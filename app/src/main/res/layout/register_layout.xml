<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <include layout="@layout/title"/>

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>



        <EditText
            android:id="@+id/register_editext_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/editshape"
            android:hint="请输入用户名"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" />



    <EditText
        android:id="@+id/register_editext_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/editshape"
        android:hint="请输入手机号"
        android:inputType="number"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" />

    <EditText
        android:id="@+id/register_editext_inputmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/editshape"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" />

    <EditText
        android:id="@+id/register_editext_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/editshape"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/register_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="同意" />

        <TextView
            android:id="@+id/register_textview_userlicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userlicense"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/red"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_buton_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttonshape_orange"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="已有账号，点此" />

        <TextView
            android:id="@+id/register_textview_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:text="登录"
            android:textColor="@color/red"/>
    </LinearLayout>
</LinearLayout>